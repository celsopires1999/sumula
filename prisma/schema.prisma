generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model PlaceModel {
  id String @id @default(uuid())

  name String

  created_at DateTime    @default(now())
  update_at  DateTime    @updatedAt
  game       GameModel[]

  @@index([name])
  @@map("places")
}

model TeamModel {
  id String @id @default(uuid())

  name String

  created_at DateTime    @default(now())
  update_at  DateTime    @updatedAt
  host       GameModel[] @relation("host")
  Visitor    GameModel[] @relation("visitor")

  @@index([name])
  @@map("teams")
}

model GameModel {
  id String @id @default(uuid())

  date DateTime

  place    PlaceModel @relation(fields: [place_id], references: [id])
  place_id String

  host    TeamModel @relation("host", fields: [host_id], references: [id])
  host_id String

  visitor    TeamModel @relation("visitor", fields: [visitor_id], references: [id])
  visitor_id String

  created_at DateTime @default(now())
  update_at  DateTime @updatedAt

  @@map("games")
}
